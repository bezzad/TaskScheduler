{
  "jobs": [
    {
      "jobType": "Recurring",
      "enable": true,
      "name": "Taaghche purchese checker (method: taaghche)",
      "description": "Call Taaghche purchese web api every hour",
      "actionName": "CallRestApi",
      "actionParameters": {
        "url": "http://localhost:8001/v1/monitor/payment",
        "httpMethod": "GET",
        "queryParameters": {
          "duration": 60,
          "min": 0,
          "method": "taaghche"
        }
      },
      "notifyCondition": "NotEquals",
      "notifyConditionResult": "OK: \"\"",
      "triggerOn": "0 * * * *" // every hour
    },
